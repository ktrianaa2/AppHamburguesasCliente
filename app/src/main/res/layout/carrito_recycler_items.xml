<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/recycler_bg2">

    <ImageView
        android:id="@+id/carrito_image"
        android:layout_width="86dp"
        android:layout_height="95dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/producto" />


    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:backgroundTint="@color/rojo"
        android:gravity="center"
        android:text="Quitar de la lista"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/carrito_image"
        app:layout_constraintTop_toBottomOf="@+id/carritoInfoProducto"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />

    <TextView
        android:id="@+id/carrito_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="Nombre del Producto"
        app:layout_constraintEnd_toStartOf="@+id/carrito_price_total"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/carrito_image"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/carrito_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="DescripciÃ³n del Producto"
        app:layout_constraintStart_toStartOf="@+id/carrito_name"
        app:layout_constraintEnd_toEndOf="@+id/carrito_name"
        app:layout_constraintTop_toBottomOf="@+id/carrito_name" />


    <TextView
        android:id="@+id/carritoInfoProducto"
        android:layout_width="230dp"
        android:layout_height="25dp"
        android:text="Info "
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/carrito_description"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/carrito_description"
        app:layout_constraintTop_toBottomOf="@+id/carrito_description"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/carrito_price_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="$166"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
