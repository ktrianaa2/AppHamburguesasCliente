<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/recycler_bg2">

    <ImageView
        android:id="@+id/carrito_image"
        android:layout_width="86dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/producto" />

    <LinearLayout
        android:id="@+id/removeLayout"
        android:layout_width="238dp"
        android:layout_height="33dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceAndUnitsLayout">

        <Button
            android:id="@+id/removeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/rojo"
            android:gravity="center"
            android:text="Quitar de la lista"
            android:textSize="12dp"
            tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/carrito_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="Nombre del Producto"
        app:layout_constraintEnd_toStartOf="@+id/carrito_price_total"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/carrito_image"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/carrito_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="DescripciÃ³n del Producto"
        app:layout_constraintStart_toStartOf="@+id/carrito_name"
        app:layout_constraintEnd_toEndOf="@+id/carrito_name"
        app:layout_constraintTop_toBottomOf="@+id/carrito_name" />


    <LinearLayout
        android:id="@+id/priceAndUnitsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/carrito_description"
        app:layout_constraintStart_toEndOf="@+id/carrito_image"
        app:layout_constraintTop_toBottomOf="@+id/carrito_description">

        <TextView
            android:id="@+id/txtcarrito_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: "
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carrito_description" />

        <TextView
            android:id="@+id/carrito_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$154"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtcarrito_unidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Unidades: "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/carrito_unidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/carrito_price_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="$166"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
